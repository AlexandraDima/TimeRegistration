@model IEnumerable<TimeRegistration.Models.Project>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{

    <script src="~/App/Controllers/projectController.js"></script>
   
}
<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>


<div class="container" ng-app="projectControllerModule">

    <div ng-controller="projectController">
        <div ng-controller="Name">
            <p>Hi, {{name}}</p>
        </div>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table>
            <tr>
                <th>Project Id</th>
                <th>Project Name</th>
                <th>Project Description</th>
                <th>Image</th>
                <th>Starting date</th>
                <th>Ending date</th>

            </tr>
            <tr ng-repeat="pr in projects">
                <td>{{pr.ID}}</td>
                <td>{{pr.ProjectName}}</td>
                <td>{{pr.ProjectDescription}} </td>
                <td><img src="~/Content/Images/Project1.svg" height="50" />
                <img ng-src="{{pr.ProjectImage}}" height="50" alt="{{pr.ProjectName }}" /> </td>
                <td>{{pr.StartingDate.slice(6, -2) | date: 'dd-MM-yyyy'}}</td> <!-- As this is a Date field, we have to format-->
                <td>{{pr.EndingDate.slice(6, -2) | date: 'dd-MM-yyyy'}}</td>

            </tr>
        </table>



