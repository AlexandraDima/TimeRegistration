
@{
    ViewBag.Title = "Likes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{


    <script src="~/App/Controllers/LikesController.js"></script>

}

<h2>Likes</h2>

<body ng-app="LikesModule">
    <div ng-controller="LikesController">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Likes</th>
                    <th>Dislikes</th>
                    <th>Likes/Dislikes</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="project in projects">
                    <td>{{project.name}}</td>
                    <td>{{project.likes}}</td>
                    <td>{{project.dislikes}}</td>
                    <td>
                        <input type="button" value="Like" ng-click="incrementLikes(project)" />
                        <input type="button" value="Like" ng-click="incrementDislikes(project)" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


</body>

