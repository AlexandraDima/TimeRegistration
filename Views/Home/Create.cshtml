@model TimeRegistration.Models.Project

@{
    ViewBag.Title = "Create";
}

@section scripts{

    <script src="~/App/Controllers/projectController.js"></script>

}

<h2>Create</h2>


<div class="container" ng-app="projectControllerModule">

    <div ng-controller="projectController">

        <table>
            <tr>
                <th>Project Name</th>
                <th>Project Description</th>
                <th>Starting date</th>
                <th>Ending date</th>

            </tr>
            <tr>
                <td><input type="text" {{project.ProjectName}} /></td>
                <td><input type="text" {{project.projectDescription}} /> </td>
                <td><input type="date" {{project.StartingDate.slice(6, -2) | date: 'dd-MM-yyyy'}} /></td> <!-- As this is a Date field, we have to format-->
                <td><input type="date" {{project.EndingDate.slice(6, -2) | date: 'dd-MM-yyyy'}} /></td>

            </tr>
        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

